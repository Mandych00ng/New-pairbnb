<h1><%= @listing.name %></h1>
<%= @listing.location %><br>
<p><%= @listing.pricing %> per night</p>
<% @listing.images.each do |image| %>
	<%= image_tag(image.medium) %><br>
<% end %>
<%= @listing.tag_list %>

<%= form_for(@reservation) do |f| %>
	<%= f.date_field :start_date %>
	<%= f.date_field :end_date %>
	<%= f.hidden_field :listing_id , value: @listing.id %>
	<%= f.submit 'Book now' %>
<% end %>